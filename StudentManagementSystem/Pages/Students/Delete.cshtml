@page
@model StudentManagementSystem.Pages.Students.DeleteModel
@{
    ViewData["Title"] = "Delete Student";
}

<div class="container mt-4">
    <h2 class="text-danger text-center mb-4">Delete Student</h2>

    <div class="alert alert-warning text-center">
        <h4>Are you sure you want to delete this student?</h4>
        <p>This action cannot be undone.</p>
    </div>

    <div class="card shadow-sm p-4">
        <h3 class="text-primary">@Model.Student.Name</h3>
        <p><strong>Age:</strong> @Model.Student.Age</p>
        <p><strong>Course:</strong> @Model.Student.Course</p>

        <form method="post" onsubmit="return confirm('Are you sure you want to delete this student?');">
            <input type="hidden" asp-for="Student.Id" />
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete
                </button>
                <a asp-page="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>
